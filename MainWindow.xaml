<Window x:Class="karkac.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:karkac"
        mc:Ignorable="d"
        Title="Автосервис Лопаткин" Height="450" Width="800" FontFamily="Tw Cen MT" Icon="Properties/service_logo.ico">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image  Source="Properties/service_logo.png" HorizontalAlignment="Left"/>
        <TextBlock FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Услуги автосервиса"/>
        <Frame Grid.Row="1" Name="MainFrame"  ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility = "Hidden" ></Frame>
        <Button Content="Назад" Name="BtnBack" Width="175" Height="30" HorizontalAlignment="Right" Margin="5" Click="BtnBack_Click"></Button>
    </Grid>
    
</Window>
